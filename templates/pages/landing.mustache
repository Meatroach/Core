{{>header}}
{{>logo}}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">

            {{#hasErrors}}
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{#getErrors}}
                        <p>{{.}}</p>
                    {{/getErrors}}
                </div>
            {{/hasErrors}}

            <div class="row">
                <div class="col-md-8">
                    <a href="account/create" class="btn btn-info btn-large col-md-12">Create new account</a>
                </div>
                <div class="col-md-4">
                    {{>pages/login}}
                </div>
            </div>

        </div>
    </div>
</div>
{{>footer}}


