<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">


            <div class="row">
                <div class="col-md-12">

                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <td>Owner</td>
                            <td>CityName</td>
                            <td>Position(Y/X)</td>
                        </tr>
                        </thead>
                        <tbody>
                        {{#cities}}
                            <tr>
                                <td>{{owner}}</td>
                                <td>{{name}}</td>
                                <td><span class="y">{{posY}}</span>/<span class="x">{{posX}}</span></td>
                            </tr>
                        {{/cities}}
                        </tbody>
                    </table>

                </div>

            </div>

        </div>
    </div>
</div>
